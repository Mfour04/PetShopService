@page
@model WebRazor.Pages.ServicesModel
@{
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetPath HTML</title>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

    <script defer src="/js/main.js"></script>
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    @Html.Partial("PageCommon/PreLoad")
    @Html.Partial("PageCommon/PageHeader")
    @Html.Partial("PageCommon/PageSearchForm")

    <!-- main start -->
    <main>
        <!-- inner hero section start -->
        <section class="inner-hero-section pt-xxl-0 pt-xs-15 pt-20 pt-120 bg-primary2" style="padding: 50px 100px 0px 100px;">
            <div class="container position-relative" style="padding: 50px 100px 0px 100px;">
                <div class="row g-6 justify-content-between align-items-center">
                    <div class="col-sm-6">
                        <span class="mb-3 text-h1 text-n20">Services</span>
                        <ul class="breadcrumb d-inline-flex align-items-center justify-content-center gap-lg-2 gap-1">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active"><a href="#">Services</a></li>
                        </ul>
                    </div>
                    <div class="col-xl-5 col-sm-6 me-auto d-none d-sm-block">
                        <div class="reveal-bottom inner-hero-banner">
                            <img class="w-100" src="/images/inner-hero-banner.png" alt="inner hero banner">
                        </div>
                    </div>
                </div>
                <div class="pows position-absolute top-60 right-n10 translate-middle-y z-n1 d-none d-sm-block">
                    <img class="w-100" src="/images/pows.png" alt="pow">
                </div>
            </div>
        </section>
        <!-- inner hero section end -->
        <!-- service section start -->
        <section class="service-section pt-120 pb-120" style="padding: 50px 100px 0px 100px;">
            <div class="container">
                <div class="row justify-content-center mb-lg-15 mb-md-10 mb-8">
                    <div class="col-xl-6 col-lg-8 text-center">
                        <span class="d-block text-primary text-uppercase mb-lg-4 mb-3">Services</span>
                        <h1 class="text-animation-word text-center font-otomanopee text-n20 fw-normal">
                            Our one-stop solution for premium pet care
                        </h1>
                    </div>
                </div>
                <div class="row g-6 mb-lg-15 mb-md-10 mb-8 justify-content-center justify-content-md-start">
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-secondary3 overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-1.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Dog
                                Care
                            </p>
                            <p class="text-n20">    
                                Our Dog Care services include grooming, walking, boarding, and training. We ensure your
                                furry friend is happy, healthy.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-primary overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-2.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Cat
                                Care
                            </p>
                            <p class="text-n20">
                                At PetPath, we offer specialized cat care services including grooming, boarding, and
                                in-home visits. Our dedicated team
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-secondary2 overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-3.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Pet
                                Grooming
                            </p>
                            <p class="text-n20">
                                Keep your pets looking their best with our full-service grooming. From baths to nail
                                trims, our expert groomers.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-secondary overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-4.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Veterinary
                                Care
                            </p>
                            <p class="text-n20">
                                Ensure your pet's health with our expert veterinary care. From routine check-ups to
                                emergency services,
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-secondary4 overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-5.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Health
                                & Treatment
                            </p>
                            <p class="text-n20">
                                Ensure your pet's well-being with our expert health and treatment services. From regular
                                check-ups to specialized care.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-xs-10">
                        <div class="service-card position-relative text-center py-xl-20 py-lg-15 py-sm-12 py-18 px-xl-10 px-sm-8 px-10 border n20-border radius-circle bg-primary2 overflow-hidden">
                            <div class="dog-paws position-absolute end-0 top-0 me-10 mt-10">
                                <img class="w-100" src="/images/dog-paws.png" alt="">
                            </div>
                            <div class="icon-80px mx-auto radius-0 mb-lg-8 mb-6">
                                <img class="w-100" src="/images/service-icon-6.png" alt="dog icon">
                            </div>
                            <p
                               class="text-animation-line text-h3 text-n20 font-otomanopee fw-normal mb-4 hover-underline">
                                Pet
                                Boarding
                            </p>
                            <p class="text-n20">
                                PetPath offers safe and comfortable overnight boarding with 24/7 care. Our luxurious
                                suites.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- services section end -->
        <!-- pricing section  -->
        <!-- pricing section start  -->
        <section class="pricing-section pt-120 pb-120 bg-secondary3" style="padding: 50px 100px;">
            <div class="container">
                <div class="row justify-content-center mb-lg-15 mb-md-10 mb-8">
                    <div class="col-xl-6 col-lg-8 text-center">
                        <h2 class="text-h1">Our Services & Pricing</h2>
                    </div>
                </div>
                <div class="row g-6 justify-content-center">
                    @foreach (var service in Model.Services)
                    {
                        <div class="col-lg-4 col-md-6 col-xs-10">
                            <div class="price-card p-6 bg-white border text-center radius-32">
                                <div class="icon-80px p-lg-4 p-2 mx-auto mb-lg-6 mb-4 border n20-border bg-secondary">
                                    <img class="w-100" src="/images/pricing-icon-1.png" alt="icon">
                                </div>
                                <h4 class="fw-normal">@service.ServiceName</h4>
                                <span class="text-muted">Rating: @service.Rating ★</span>
                                <span class="d-block border-bottom my-4"></span>
                                <span class="text-n20 text-h2 font-otomanopee fw-bold">@service.Price $</span>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/AddBooking" class="btn-primary w-100">Book Now</a>
                                }
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <span class="text-muted">Login before booking services.</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- pricing section end  -->
        
        <!-- team section end  -->

    </main>
    @Html.Partial("PageCommon/PageFooter")

</body>