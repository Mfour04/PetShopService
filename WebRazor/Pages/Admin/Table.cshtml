@page
@model WebRazor.Pages.Admin.TableModel
@{
    Layout = "_AdminLayout";
    ViewData["Table"] = "Table";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="content">
    <!-- User Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">User</h4>
                    <form method="get">
                        <input type="hidden" name="searchType" value="User" />
                        <div class="input-group no-border">
                            <input type="text" name="keyword" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="nc-icon nc-zoom-split"></i>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>Name</th>
                                    <th>@Html.DisplayNameFor(model => model.user.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.user.Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.user.Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.user.Gender)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                    <tr accesskey="User-@item.UserId">
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@(item.Gender == null ? "Unknown" : (item.Gender == true ? "Male" : "Female"))</td>
                                        <td>
                                            <button class="btn btn-dark" onclick="openEditModal('@item.UserId', 'User')"><i class="bi bi-pencil-square"></i></button>
                                            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <input type="hidden" name="userId" value="@item.UserId" />
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Table -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Products</h4>
                    <button class="btn btn-dark" onclick="openAddProductModal()">Add Product</button>
                    <form method="get">
                        <input type="hidden" name="searchType" value="Product" />
                        <div class="input-group no-border">
                            <input type="text" name="keyword" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="nc-icon nc-zoom-split"></i>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width: 35%">Name</th>
                                    <th style="width: 20%">Category</th>
                                    <th style="width: 15%">@Html.DisplayNameFor(model => model.product.Price)</th>
                                    <th style="width: 10%">@Html.DisplayNameFor(model => model.product.Status)</th>
                                    <th>Image</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.FilePath))
                                            {
                                                <img src="@item.FilePath" alt="Product Image" style="width: 50px; height: 50px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <span>No Image</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-dark mb-2" onclick="editProductModal('@item.ProductId')"><i class="bi bi-pencil-square"></i></button>
                                            <form method="post" asp-page-handler="DeleteProduct" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service Schedule Table -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Service Schedules</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="height: 500px; overflow-y: auto">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>Service Name</th>
                                    <th>User Name</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var schedule in Model.ServiceSchedules)
                                {
                                    <tr>
                                        <td>@schedule.Service?.ServiceName</td>
                                        <td>@schedule.User?.Name</td>
                                        <td>@schedule.Date?.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <form method="post" asp-page-handler="ToggleStatus" onsubmit="return confirmStatus(@schedule.Status)">
                                                <input type="hidden" name="scheduleId" value="@schedule.ScheduleId" />
                                                <input type="hidden" name="status" value="@(schedule.Status == 1 ? 2 : 1)" />
                                                <button type="submit" class="btn @((schedule.Status == 2) ? "btn-success" : "btn-secondary")">
                                                    @((schedule.Status == 2) ? "Checked" : "Unchecked")
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for adding product -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="max-width: 50%;">
            <div class="modal-content">
                <form method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="product.ProductName" class="control-label">Name</label>
                            <input id="productName" asp-for="product.ProductName" class="form-control" />
                            <span asp-validation-for="product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="product.Category.CategoryName" class="control-label">Category</label>
                            <select id="productCategory" asp-for="product.Category.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="product.Price" class="control-label">Price</label>
                            <input id="productPrice" asp-for="product.Price" class="form-control" />
                            <span asp-validation-for="product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="product.Status" class="control-label"></label>
                            <input id="productStatus" asp-for="product.Status" class="form-control" />
                            <span asp-validation-for="product.Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="product.Description" class="control-label"></label>
                            <input id="productDes" asp-for="product.Description" class="form-control" />
                            <span asp-validation-for="product.Description" class="text-danger"></span>
                        </div>
                       <div class="form-group">
                            <label asp-for="FileUploads">Image</label>
                            <div class="image-upload-container" style="border: 2px dashed #ccc; padding: 20px; text-align: center;">
                                <input type="file" asp-for="FileUploads" class="form-control" multiple id="fileInput" style="display: none;" />
                                <img id="imagePreview" src="#" alt="Image Preview" style="display:none; width: 100%; max-width: 200px; margin-top: 10px;" />
                                <div id="uploadMessage" style="font-size: 16px; color: #999;">Click to upload an image</div>
                                <button type="button" id="removeImageButton" style="display:none; margin-top: 10px; background-color: #f44336; color: white; border: none; padding: 10px; cursor: pointer;">Remove Image</button>
                            </div>
                            <span asp-validation-for="FileUploads" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Save" asp-page-handler="AddProduct" class="btn btn-primary" />
                        <!-- Cancel button without Bootstrap behavior -->
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>

<!-- Footer content here -->
<footer class="footer footer-black  footer-white ">
    <div class="container-fluid">
        <div class="row">
            <nav class="footer-nav">
                <ul>
                    <li><a href="https://www.creative-tim.com" target="_blank">Creative Tim</a></li>
                    <li><a href="https://www.creative-tim.com/blog" target="_blank">Blog</a></li>
                    <li><a href="https://www.creative-tim.com/license" target="_blank">Licenses</a></li>
                </ul>
            </nav>
            <div class="credits ml-auto">
                <span class="copyright">
                    © <script>
                          document.write(new Date().getFullYear())
                    </script>, made with <i class="fa fa-heart heart"></i> by Creative Tim
                </span>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>

    var modalElement = document.getElementById('addProductModal');
    var modal = new bootstrap.Modal(modalElement);

    function openAddProductModal() {
        modal.show(); 
    }

    document.querySelector('.btn-close').addEventListener('click', function() {
        console.log('Nút đóng modal đã được bấm');
        modal.hide();  
    });

     document.querySelector('.image-upload-container').addEventListener('click', function() {
         document.getElementById('fileInput').click();
     });

     document.getElementById("fileInput").addEventListener("change", function (event) {
         const file = event.target.files[0];
         const reader = new FileReader();

         reader.onload = function (e) {
             const imagePreview = document.getElementById("imagePreview");
             const uploadMessage = document.getElementById("uploadMessage");
             const removeImageButton = document.getElementById("removeImageButton");

             imagePreview.src = e.target.result;
             imagePreview.style.display = "block";
             uploadMessage.style.display = "none"; 
             removeImageButton.style.display = "block";
         };

         if (file) {
             reader.readAsDataURL(file);
         }
     });

     document.getElementById("removeImageButton").addEventListener("click", function() {
         const imagePreview = document.getElementById("imagePreview");
         const uploadMessage = document.getElementById("uploadMessage");
         const removeImageButton = document.getElementById("removeImageButton");

         imagePreview.style.display = "none";
         uploadMessage.style.display = "block";
         removeImageButton.style.display = "none";

         document.getElementById('fileInput').value = '';

     });
</script>

 

