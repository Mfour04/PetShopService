@page
@model WebRazor.Pages.ViewBookingModel
@{
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetPath HTML</title>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

    <script defer src="/js/main.js"></script>
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    @Html.Partial("PageCommon/PreLoad")
    @Html.Partial("PageCommon/PageHeader")
    @Html.Partial("PageCommon/PageSearchForm")
    <main>
        <section class="choose-us-section pt-120 pb-120" style="padding: 50px 100px 50px 100px;">
            <div class="container" style="margin-top: 100px;">
                <a href="/AddBooking" class="btn-secondary border-0 text-nowrap" style="float: right; margin-bottom: 10px">Book</a>
                <h3 class="mb-3">Your Schedule</h3>
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Service Name</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model.ServiceSchedules)
                        {
                            <tr>
                                <td>@schedule.Service?.ServiceName</td>
                                <td>@schedule.Date?.ToShortDateString()</td>
                                <td>@schedule.Service?.Price?.ToString("C")</td>
                                <td>
                                    @if (schedule.Status == 1)
                                    {
                                        <span class="badge bg-warning text-dark">Uncheck</span>
                                    }
                                    else if (schedule.Status == 2)
                                    {
                                        <span class="badge bg-success">Checked</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    @Html.Partial("PageCommon/PageFooter")

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
