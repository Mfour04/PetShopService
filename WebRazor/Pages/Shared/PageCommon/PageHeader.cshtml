@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
	// Kiểm tra xem người dùng đã đăng nhập hay chưa bằng cookie authentication
	bool isLoggedIn = User.Identity.IsAuthenticated;
}

<header class="header-section position-fixed top-0 start-50 translate-middle-x" style="padding: 0px 20px 0px 20px; background-color: bisque;" data-lenis-prevent>
	<div class="container px-0" style="padding: 0px 20px 0px 20px;">
		<!-- navbar area -->
		<div class="d-flex align-items-center justify-content-between px-lg-0 px-4 py-lg-5 py-3">
			<div class="logo">
				<a href="/Index">
					<img class="w-100 d-block d-sm-none" src="/images/favicon.png" alt="logo">
					<img class="w-100 d-none d-sm-block" src="/images/logo.png" alt="logo">
				</a>
			</div>
			<nav class="navbar-area">
				<ul class="nav-menu-items d-lg-flex d-grid gap-3xl-8 gap-xxl-6 gap-4">
					<li class="menu-link">
						<a href="/Index" class="slide-vertical" data-splitting>Home</a>
					</li>
					<li class="menu-link">
						<a href="/About-us" class="slide-vertical" data-splitting>About</a>
					</li>
					<li class="menu-item">
						<button class="slide-vertical" data-splitting>
							Pages
							<span class="lh-0"><i class="ph ph-plus"></i></span>
						</button>
						<ul class="sub-menu">
							<li class="menu-item">
								<button class="slide-vertical" data-splitting>
									Services
									<span class="lh-0"><i class="ph ph-plus"></i></span>
								</button>
								<ul class="sub-menu">
									<li class="menu-link">
										<a href="/Services" class="slide-horizontal" data-splitting>Services</a>
									</li>
									<li class="menu-link">
										<a href="/Service-details" class="slide-horizontal" data-splitting>
											Service
											Details
										</a>
									</li>
								</ul>
							</li>
							<li class="menu-item">
								<button class="slide-vertical" data-splitting>
									Blogs
									<span class="lh-0"><i class="ph ph-plus"></i></span>
								</button>
								<ul class="sub-menu">
									<li class="menu-link">
										<a href="/Blogs" class="slide-horizontal" data-splitting>Blogs</a>
									</li>
									<li class="menu-link">
										<a href="/Blog-details" class="slide-horizontal" data-splitting>
											Blogs
											Details
										</a>
									</li>
								</ul>
							</li>
						</ul>
					</li>
					<li class="menu-item">
						<button class="slide-vertical" data-splitting>
							Shop
							<span class="lh-0"><i class="ph ph-plus"></i></span>
						</button>
						<ul class="sub-menu">
							<li class="menu-link">
								<a href="/Shop" class="slide-horizontal" data-splitting>Shop</a>
							</li>
							<li class="menu-link">
								<a href="/Shop-details" class="slide-horizontal" data-splitting>
									Shop
									Details
								</a>
							</li>
							<li class="menu-link">
								<a href="/Cart" class="slide-horizontal" data-splitting>Cart</a>
							</li>
							<li class="menu-link">
								<a href="/Checkout" class="slide-horizontal" data-splitting>Checkout</a>
							</li>
						</ul>
					</li>
					<li class="menu-link">
						<a href="/Contact-us" class="slide-vertical" data-splitting>Contact</a>
					</li>
				</ul>
			</nav>
			<div class="nav-btns d-flex align-items-center gap-lg-5 gap-3">

				<!-- search icon -->
				<button class="search-btn text-2xl font-semibold text-n20">
					<i class="ph ph-magnifying-glass"></i>
				</button>

				<button class="cart-btn icon-48px position-relative border n20-border text-n20 hover-bg-primary hover-text-n0">
					<span class="badge radius-pill text-n0 text-sm fw-medium bg-n20 position-absolute top-50 start-100 translate-middle z-1 mt-n3">0</span>
					<span class="text-xl font-semibold">
						<i class="ph-fill ph-shopping-cart"></i>
					</span>
				</button>
				@if (isLoggedIn)
				{
					<a href="/ViewBooking" class="btn-primary text-nowrap">Book</a>
				}

				<!-- Nút Login/Logout -->
				<div class="header-buttons">
					@if (isLoggedIn)
					{
						<!-- Nút Logout khi đã đăng nhập -->
						<a href="/Logout" class="btn-primary text-nowrap">Logout</a>
					}
					else
					{
						<!-- Nút Login khi chưa đăng nhập -->
						<a href="/Login" class="btn-primary text-nowrap">Login</a>
					}
				</div>

				<button class="menu-toggle-btn text-2xl">
					<i class="ph ph-list"></i>
				</button>
			</div>
		</div>
	</div>
</header>




