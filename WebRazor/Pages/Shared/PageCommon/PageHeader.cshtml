@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
	// Kiểm tra xem người dùng đã đăng nhập hay chưa bằng cookie authentication
	bool isLoggedIn = User.Identity.IsAuthenticated;
}

<header class="header-section position-fixed top-0 start-50 translate-middle-x" style="padding: 0px 20px 0px 20px; background-color: bisque;" data-lenis-prevent>
	<div class="container px-0" style="padding: 0px 20px 0px 20px;">
		<!-- navbar area -->
		<div class="d-flex align-items-center justify-content-between px-lg-0 px-4 py-lg-5 py-3">
			<div class="logo">
				<a href="/Index">
					<img class="w-100 d-block d-sm-none" src="/images/favicon.png" alt="logo">
					<img class="w-100 d-none d-sm-block" src="/images/logo.png" alt="logo">
				</a>
			</div>
			<nav class="navbar-area">
				<ul class="nav-menu-items d-lg-flex d-grid gap-3xl-8 gap-xxl-6 gap-4">
					<li class="menu-link">
						<a href="/Index" class="slide-vertical" data-splitting>Home</a>
					</li>
					<li class="menu-link">
						<a href="/About-us" class="slide-vertical" data-splitting>About</a>
					</li>
					<li class="menu-item">
						<button class="slide-vertical" data-splitting>
							Shop
							<span class="lh-0"><i class="ph ph-plus"></i></span>
						</button>
						<ul class="sub-menu">
							<li class="menu-link">
								<a href="/Shop" class="slide-horizontal" data-splitting>Shop</a>
							</li>
							<li class="menu-link">
								<a href="/Cart" class="slide-horizontal" data-splitting>Cart</a>
							</li>
						</ul>
					</li>
					@if (isLoggedIn)
					{
						<li class="menu-link">
							<a href="/ViewBooking" class="slide-vertical" data-splitting>Book</a>
						</li>
					}
					<li class="menu-link">
						<a href="/Contact-us" class="slide-vertical" data-splitting>Contact</a>
					</li>
				</ul>
			</nav>
			<div class="nav-btns d-flex align-items-center gap-lg-5 gap-3">

				<button class="cart-btn icon-48px position-relative border n20-border text-n20 hover-bg-primary hover-text-n0">
					<i class="ph-fill ph-shopping-cart fs-4"></i>
					<span id="cart-count" class="position-absolute top-0 start-100 mt-1 ms-n1 translate-middle badge rounded-pill bg-danger">
						0
					</span>
				</button>

				<!-- Nút Login/Logout -->
				<div class="header-buttons">
					@if (isLoggedIn)
					{
						<div class="dropdown">
							<button class="d-flex justify-content-center align-items-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="height: 3rem; width: 3rem; overflow: hidden; border-radius: 50%; border: 2px solid white;">
								<img src="https://image.dienthoaivui.com.vn/x,webp,q90/https://dashboard.dienthoaivui.com.vn/uploads/dashboard/editor_upload/hinh-nen-may-tinh-4k-17.jpg" class="w-100 h-100 object-fit-cover" />
							</button>
							<ul class="dropdown-menu mt-2" aria-labelledby="dropdownMenuButton">
								<li><a class="dropdown-item" href="/Profile">Profile</a></li>
								<li><a class="dropdown-item" href="/Logout">Logout</a></li>
							</ul>
						</div>
					}
					else
					{
						<!-- Nút Login khi chưa đăng nhập -->
						<a href="/Login" class="btn-primary text-nowrap">Login</a>
					}
				</div>

				<button class="menu-toggle-btn text-2xl">
					<i class="ph ph-list"></i>
				</button>
			</div>
		</div>
	</div>
</header>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>




