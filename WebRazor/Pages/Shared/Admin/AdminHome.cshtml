@page
@model AdminHomeModel
@{
	ViewData["Title"] = "AdminHome";
}

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>PetPath HTML</title>
	<link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

	<script defer src="/js/main.js"></script>
	<link href="/css/style.css" rel="stylesheet">
</head>

<body>
@Html.Partial("PageCommon/PreLoad")
@Html.Partial("PageCommon/PageHeader")
@Html.Partial("PageCommon/PageSearchForm")

	<aside class="shop-sidebar bg-light p-3" style="width: 250px;">
		<ul class="nav flex-column">
			<li class="nav-item">
				<a class="nav-link active" href="#" onclick="loadTable('users')">Users</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#" onclick="loadTable('products')">Products</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#" onclick="loadTable('services')">Services</a>
			</li>
		</ul>
	</aside>

	<main>
		<section class="choose-us-section pt-120 pb-120" style="padding: 50px 100px 0px 100px;">
			<div class="container">
				<div class="row justify-content-center mb-lg-15 mb-md-10 mb-8 position-relative">
					<div class="col-xl-6 col-lg-8 text-center px-lg-0">
						<span class="d-block text-primary text-uppercase mb-lg-4 mb-3">ADMIN PAGE</span>
					</div>
				</div>
				<div id="table-container" class="mt-4"></div>
			</div>

			
		</section>

	</main>

</body>

@section Scripts {
	<script src="~/js/admin.js"></script>
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}