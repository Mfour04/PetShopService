@page
@model WebRazor.Pages.BookingServiceModel
@{
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetPath Schedule</title>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">PetPath Schedule Manager</h1>
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-schedule-tab" data-bs-toggle="pill" data-bs-target="#pills-schedule" type="button" role="tab">Your Schedule</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-add-tab" data-bs-toggle="pill" data-bs-target="#pills-add" type="button" role="tab">Add Schedule</button>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <!-- Your Schedule Tab -->
            <div class="tab-pane fade show active" id="pills-schedule" role="tabpanel">
                <div class="card p-3">
                    <h3 class="h3 mb-3">View Schedule</h3>

                    <form method="get">
                        <div class="mb-3">
                            <label for="selectedDate" class="form-label">Select Date:</label>
                            <input type="date" id="selectedDate" name="SelectedDate" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">View Schedule</button>
                    </form>

                    <div id="scheduleDetails" class="mt-3">
                        @if (Model.SchedulesForSelectedDate != null && Model.SchedulesForSelectedDate.Count > 0)
                        {
                                <h4>Schedules for @Model.SelectedDate.ToString("dd/MM/yyyy"):</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Service</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var schedule in Model.SchedulesForSelectedDate)
                                    {
                                                <tr>
                                                    <td>@schedule.Service?.ServiceName</td>
                                                    <td>@schedule.Date?.ToString("dd/MM/yyyy")</td>
                                                    <td>@schedule.Status</td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                        }
                        else
                        {
                                <p>No schedules found for @Model.SelectedDate.ToString("dd/MM/yyyy").</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Add Schedule Tab -->
            <div class="tab-pane fade" id="pills-add" role="tabpanel">
                <div class="card p-3">
                    <h3 class="h3 mb-3">Add Schedule</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label for="service" class="form-label">Service:</label>
                            <select id="service" name="serviceId" class="form-select">
                                @foreach (var service in Model.ShopServices)
                                {
                                        <option value="@service.ServiceId">@service.ServiceName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="date" class="form-label">Date:</label>
                            <input type="date" id="date" name="date" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Add Schedule</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
}
